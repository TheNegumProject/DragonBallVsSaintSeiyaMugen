; Definition file for Kung Fu Man
; Contains all the filenames needed for the character

; Player information
[Info]
name = "Omega Shenron"        ;Name of character
displayname = "Omega Shenron" ;Name of character to display
versiondate = 07,05,2013    ;Version date of character (MM-DD-YYYY or X.XX)
mugenversion = 1.0          ;Version of M.U.G.E.N character works on (X.XX)
author = "Gladiacloud"         ;Character author name
pal.defaults = 1
localcoord = 320,240        ;Local coordinate space width and height

; Files for the player
[Files]
cmd     = omegashenron.cmd           ;Command set
cns     = omegashenron.cns           ;Constants
st      = omegashenron.cns           ;States
st2     = attack.cns
st3     = special.cns
st4     = hyper.cns
stcommon = common1.cns      ;Common states (from data/ or motif)
sprite  = omegashenron.sff           ;Sprite
anim    = omegashenron.air           ;Animation
sound   = omegashenron.snd           ;Sound

; Maps character selection buttons to palette numbers.
[Palette Keymap]
x = 1 ;Press button X to select palette 1, etc.
y = 2
z = 3
a = 4
b = 5
c = 6